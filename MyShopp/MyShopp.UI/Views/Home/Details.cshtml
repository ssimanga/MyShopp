@model MyShopp.Core.Models.Product

@{
    ViewBag.Title = Model.Name + " Details";
}

<h2>@Html.DisplayFor(model=> model.Name)</h2>
<div class="col-md-2">
    <img class="img-fluid" src="~/Content/ProductImages/@Model.Image" />
</div>

<div class="col-md-10">
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
       
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt></dt>
        <dd>
            <a href="@Url.Action("AddToBasket", "Basket", new { Id= Model.Id})" class="btn btn-outline-info">Add To Cart</a> 
        </dd>
        <dt></dt>
        <dt>
            @Html.ActionLink("Back to List", "Index")
        </dt>
 

    </dl>
</div>
<div class="col-md-12 clearfix"></div>
